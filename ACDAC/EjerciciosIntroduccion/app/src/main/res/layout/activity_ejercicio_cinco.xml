<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio_cinco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amador.ejerciciosintroduccion.EjercicioCincoClass"
    android:background="@drawable/azul_fondo"

    >


    <RelativeLayout
        android:id="@+id/padre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        >

        <EditText
            android:id="@+id/edtPalabra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorWrite"
            android:hint="Escribe la palabreja"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:inputType=""
            android:textStyle="normal|bold|italic"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_below="@+id/edtPalabra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGuaPalabra"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edtPalabra"
                android:background="@drawable/img_anadir_palabra"
                />

            <Button
                android:id="@+id/btnAbrirDiccionario"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edtPalabra"
                android:background="@drawable/img_boton_diccionario"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>


    </RelativeLayout>













</RelativeLayout>
