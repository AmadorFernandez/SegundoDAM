<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_eja"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amador.ejerciciosficheros.EjA">




    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoud1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        >


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtFirstData"
            android:hint="@string/data_one"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_edt"
            android:inputType="numberDecimal"

            />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoud2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/inputLayoud1"
        >


        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtSecontData"
            android:hint="@string/data_two"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_edt"
            android:inputType="numberDecimal"

            />




    </android.support.design.widget.TextInputLayout>


   <ImageButton
       android:id="@+id/ibtnSum"
       android:layout_width="@dimen/float_button_dimen"
       android:layout_height="@dimen/float_button_dimen"
       android:background="@drawable/sum_btn"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       />


   <TextView
       android:id="@+id/txvResultado"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/inputLayoud2"
       android:textStyle="bold"
       android:layout_marginTop="@dimen/top_edt"
       />








</RelativeLayout>
