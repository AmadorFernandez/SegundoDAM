<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amador.ejerciciosficheros.SelectionActivity">


    <ImageView
        android:id="@+id/btnA"
        android:layout_width="@dimen/dimen_btn_selection"
        android:layout_height="@dimen/dimen_btn_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_btn_selection"
        android:src="@drawable/leter_a"
        android:scaleType="fitCenter"


        />

    <ImageView
        android:id="@+id/btnB"
        android:layout_width="@dimen/dimen_btn_selection"
        android:layout_height="@dimen/dimen_btn_selection"
        android:layout_below="@+id/btnA"
        android:layout_centerHorizontal="true"
        android:src="@drawable/letra_b"
        android:scaleType="fitCenter"

        />

    <ImageView
        android:id="@+id/btnC"
        android:layout_width="@dimen/dimen_btn_selection"
        android:layout_height="@dimen/dimen_btn_selection"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnB"
        android:src="@drawable/letra_c"
        android:scaleType="fitCenter"

        />

    <ImageView
        android:id="@+id/btnD"
        android:layout_width="@dimen/dimen_btn_selection"
        android:layout_height="@dimen/dimen_btn_selection"
        android:layout_below="@+id/btnC"
        android:layout_centerHorizontal="true"
        android:src="@drawable/letra_d"
        android:scaleType="fitCenter"
        />

</RelativeLayout>
