<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seleccion_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amador.ejerciciosficheros.SeleccionActivityClass">




    <Button
        android:id="@+id/btnEjB"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/heigth_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/b"


        />

    <Button
        android:id="@+id/btnEjC"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/heigth_button"
        android:layout_below="@+id/btnEjD"
        android:layout_centerInParent="true"
        android:background="@drawable/c"

        />

    <Button
        android:id="@+id/btnEjD"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/heigth_button"
        android:layout_centerVertical="true"
        android:background="@drawable/d"
        />

    <Button
        android:id="@+id/btnEjA"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/heigth_button"
        android:layout_centerInParent="true"
        android:layout_above="@id/btnEjD"
        android:background="@drawable/a"


        />


</RelativeLayout>
