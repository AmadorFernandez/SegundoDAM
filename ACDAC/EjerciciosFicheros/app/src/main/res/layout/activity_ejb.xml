<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amador.ejerciciosficheros.EjB">

    <TextView
        android:id="@+id/txvFirstDataExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_first_data"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_boss"
        />


    <EditText
        android:id="@+id/edtFirstDataExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvFirstDataExternal"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"

        />

    <TextView
        android:id="@+id/txvSecondDataExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_first_data"
        android:textStyle="bold"
        android:layout_below="@+id/edtFirstDataExternal"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/edtSeconDataExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvSecondDataExternal"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"

        />

    <Button
        android:id="@+id/btnSumExternal"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/heigth_button"
        android:background="@drawable/suma"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtSeconDataExternal"

        />

    <TextView
        android:id="@+id/txvResultExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/btnSumExternal"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/txvInfoExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/txvResultExternal"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
