
public class SimulacionCena {

	public static void main(String[] args) {
	
		Filosofo[] losFilosofos = new Filosofo[6];		
		Cena cena = new Cena(5);
		
		for (int i = 0; i < losFilosofos.length; i++) {
		
			losFilosofos[i] = new Filosofo(i+1, 5, cena);
			losFilosofos[i].start();
		}
		
		for (int i = 0; i < losFilosofos.length; i++) {
			
			try {
				losFilosofos[i].join();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
		}
		
		System.out.println("Termino la cena");
	}

}
