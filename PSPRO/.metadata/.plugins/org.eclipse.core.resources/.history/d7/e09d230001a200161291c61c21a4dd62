
public class SimulacionCena {

	public static void main(String[] args) {
	
		
		Filosofo[] losFilosofos = new Filosofo[5];		
		Cena cena = new Cena(5);
		
		for (int i = 0; i < losFilosofos.length; i++) {
		
			losFilosofos[i] = new Filosofo(i, 4, cena);
			losFilosofos[i].start();
		}
		
		for (int i = 0; i < losFilosofos.length; i++) {
			
			try {
				losFilosofos[i].join();
			} catch (InterruptedException e) {
				
				System.err.println("En el main");
			}
			
		}
		
		System.out.println("Termino la cena");
	}

}
